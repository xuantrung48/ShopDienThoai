@model List<OrderDetailViewModel>
@{ 
    ViewBag.Title = "Danh sách đơn hàng";
}
<h2 class="text-center">@ViewBag.Title</h2>
<table class="table table-hover table-responsive table-bordered display w-100 d-block d-md-table">
    <tr class="thead-dark">
        <th>ID</th>
        <th>Trạng thái</th>
        <th>Sản phẩm</th>
        <th>Giá</th>
        <th>Ngày đặt hàng</th>
        <th>Ngày giao hàng</th>
    </tr>
    @if (Model != null)
    {
        foreach(var order in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Order" asp-action="OrderDetail" asp-route-id="@order.OrderId">@order.OrderId</a>
                </td>
                <td>
                    @{
                        var statusName = string.Empty;
                        switch (order.OrderStatus)
                        {
                            case OrderStatus.Pending:
                                statusName = "Đợi xử lý";
                                break;
                            case OrderStatus.Processing:
                                statusName = "Đang xử lý";
                                break;
                            case OrderStatus.Completed:
                                statusName = "Đã hoàn thành";
                                break;
                            default:
                                statusName = "Đã huỷ";
                                break;
                        }
                    }
                    @statusName
                </td>
                <td>
                    <a asp-controller="Home" asp-action="ViewProduct" asp-route-id="@order.ProductId">
                        @order.ProductName
                    </a>
                </td>
                <td>
                    @order.ProductPrice.ToString("#,##0")
                </td>
                <td>
                    @order.OrderTime.ToString("dd/MM/yyyy hh:mm tt")
                </td>
                <td>
                    @if (order.OrderStatus == OrderStatus.Completed)
                    {
                        @order.CompleteTime.ToString("dd/MM/yyyy hh:mm tt")
                    }
                </td>
            </tr>
        }
    }
</table>